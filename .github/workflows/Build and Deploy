name: "Build and Deploy"
on:
  push:
    branches:
      - main
      - master
    paths-ignore:
      - .gitignore
      - README.md
      - LICENSE

  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

# Allow one concurrent deployment
concurrency:
  group: "pages"
  cancel-in-progress: true

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v3
        with:
          fetch-depth: 0
          # submodules: true
   

      - name: Setup Pages
        id: pages
        uses: actions/configure-pages@v3

      - name: Setup Ruby
        uses: ruby/setup-ruby@v1
        with:
          ruby-version: 3.3   # reads from a '.ruby-version' or '.tools-version' file if 'ruby-version' is omitted
          bundler-cache: true

      - name: Install Dependencies
        run: |
          bundle config set --local path 'vendor/bundle'
          bundle install

      - name: Debug Environment
        run: |
          echo "Current environment variables:"
          echo "JEKYLL_ENV: ${{ vars.JEKYLL_ENV || 'production' }}"
          echo "JEKYLL_URL: ${{ vars.JEKYLL_URL || 'https://airdroparchive.com' }}"
          echo "JEKYLL_BASEURL: ${{ vars.JEKYLL_BASEURL || '' }}"

      - name: Build site
        run: |
          echo "Starting Jekyll build..."
          bundle exec jekyll build --trace
        env:
          JEKYLL_ENV: "production"
          JEKYLL_URL: ${{ vars.JEKYLL_URL || "https://airdroparchive.com" }}
          JEKYLL_BASEURL: ${{ vars.JEKYLL_BASEURL || "" }}
        continue-on-error: true

      - name: Check build output
        if: failure()
        run: |
          echo "Build failed. Checking for common issues..."
          echo "Contents of _layouts directory:"
          ls -la _layouts/
          echo "Contents of learn.html:"
          cat _layouts/learn.html
          echo "Jekyll configuration:"
          cat _config.yml

      - name: Upload site artifact
        if: success()
        uses: actions/upload-pages-artifact@v3
        with:
          path: ./_site

  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    needs: build
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
