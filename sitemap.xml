---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
        http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">
  <!-- Main Pages -->
  <url>
    <loc>{{ site.url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  <url>
    <loc>{{ site.url }}/about/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>


  <url>
    <loc>{{ site.url }}/learn/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>

  <url>
    <loc>{{ site.url }}/search/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>

  <url>
    <loc>{{ site.url }}/timeline/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>

  <url>
    <loc>{{ site.url }}/hall-of-fame/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>

  <!-- Archived Projects -->
  {% for post in site.posts %}
    {% if post.path contains 'archviedProjects' %}
    <url>
      <loc>{{ site.url }}/projects/{{ post.title | slugify }}/</loc>
      <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      <changefreq>{% if post.status contains 'alive' %}weekly{% else %}monthly{% endif %}</changefreq>
      <priority>{% if post.status contains 'alive' %}0.9{% else %}0.7{% endif %}</priority>
    </url>
    {% endif %}
  {% endfor %}

  <!-- Fundamentals -->
  {% for post in site.posts %}
    {% if post.path contains 'fundamentals' %}
    <url>
      <loc>{{ site.url }}/projects/{{ post.title | slugify }}/</loc>
      <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.8</priority>
    </url>
    {% endif %}
  {% endfor %}

  <!-- Error Pages -->
  <url>
    <loc>{{ site.url }}/404.html</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.1</priority>
  </url>
</urlset> 